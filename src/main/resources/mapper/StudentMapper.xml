<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="buct.software.dao.StudentDao">
    <select id="getBySno" parameterType="Integer" resultType="buct.software.domain.Student">
        select * from student where student.sno= #{sno}
    </select>
    <select id="getAll" resultType="buct.software.domain.Student">
        select * from student
    </select>
    <insert id="insertStudnet" parameterType="buct.software.domain.Student">
        insert into student values (#{sno},#{sname},#{sex},#{major},#{klass},#{comeYear},#{phone},#{grade},#{majorId},#{college},#{collegeId})
    </insert>
    <select id="getStudentsByExample" parameterType="buct.software.domain.Student"
            resultType="buct.software.domain.Student">
        select * from student
        <where>
            <if test="sno!=null">
                sno = #{sno}
            </if>
            <if test="sname!=null">
                and sname = #{sname}
            </if>
            <if test="major!=null">
                and major = #{major}
            </if>
            <if test="grade!=null">
                and grade = #{grade}
            </if>
        </where>
    </select>
    <update id="updateStudent" parameterType="buct.software.domain.Student">
        update student
        <set>
            <if test="sname!=null">
                sname = #{sname}
            </if>
            <if test="sex!=null">
                ,sex = #{sex}
            </if>
            <if test="major!=null">
                ,major = #{major}
            </if>
            <if test="klass!=null">
                ,klass = #{klass}
            </if>
            <if test="comeYear!=null">
                ,come_year = #{comeYear}
            </if>
            <if test="grade!=null">
                ,grade = #{grade}
            </if>
            <if test="phone!=null">
                ,phone = #{phone}
            </if>
            <if test="majorId!=null">
                ,majorid= #{majorId}
            </if>
            <if test="college!=null">
                ,college= #{college}
            </if>
            <if test="collegeId!=null">
                ,collegeid= #{collegeId}
            </if>
        </set>
        <where>
            sno = #{sno}
        </where>
    </update>

</mapper>